{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2021"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "release/app/dist",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2021"
  },
  
  "include": [
    "src/apps/**/*.ts","src/apps/**/*.tsx",
    "src/shared/**/*.ts","src/shared/**/*.tsx",
    "src/express/**/*.ts",
    "src/main/**/*.ts","src/main/**/*.tsx","src/main/**/*.html",
    "src/renderer/**/*.ts",
    "src/shared/**/*.ts","src/shared/**/*.tsx",
    "src/system/**/*.ts","src/system/**/*.tsx",
  ],
  "exclude": [
    ".erb/dll",
    "node_modules",
    "release/app/dist",
    "release/build",
    "test"
  ]
}
